{
  "name": "vscode-paste-and-indent",
  "displayName": "Paste and Indent",
  "description": "Paste some code with \"correct\" indentation",
  "version": "0.1.0",
  "publisher": "Rubymaniac",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "bugs": {
    "url": "https://github.com/rubymaniac/vscode-paste-and-indent/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rubymaniac/vscode-paste-and-indent.git"
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "pasteAndIndent.action",
        "title": "Paste and Indent"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PasteAndIndent configuration",
      "properties": {
        "pasteAndIndent.selectAfter": {
          "type": "boolean",
          "default": false,
          "description": "After pasting and indenting selects the probably wrong indented region."
        }
      }
    }
  },
  "main": "./out/extension",
  "dependencies": {}
}
